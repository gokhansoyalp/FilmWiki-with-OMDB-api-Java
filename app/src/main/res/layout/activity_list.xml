<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/tv_mList_marginLR"
        android:layout_marginTop="@dimen/tv_mList_marginTop"
        android:layout_marginRight="@dimen/tv_mList_marginLR"
        android:text="Movie List"
        android:textSize="@dimen/tv_mList_tSize" />

    <ListView
        android:id="@+id/lv_movie"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/mList_lv_marginLeft"
        tools:listitem="@layout/list_item">

    </ListView>
</LinearLayout>